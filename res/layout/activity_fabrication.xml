<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/activity_fabrication_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="24dp"
        android:text="@string/activity_fabrication_marque_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" >

        <Button
            android:id="@+id/activity_fabrication_button_fabriquer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="57dp"
            android:layout_weight="0.5"
            android:text="@string/activity_fabrication_button_fabriquer_msg" />

        <Button
            android:id="@+id/activity_fabrication_button_annuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_fabrication_button_anuler_msg" />
    </LinearLayout>

    <Spinner
        android:id="@+id/activity_fabrication_marque_spin"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:layout_marginRight="22dp"
        android:layout_marginTop="18dp" />

    <Spinner
        android:id="@+id/activity_fabrication_moteur_spin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activity_fabrication_marque_spin"
        android:layout_below="@+id/activity_fabrication_marque_spin"
        android:layout_marginTop="76dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity_fabrication_moteur_spin"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="52dp"
        android:text="@string/activity_fabrication_moteur_text" />

</RelativeLayout>