<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/activity_fabrication_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/activity_fabrication_marque_spin"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="42dp" />

    <Button
        android:id="@+id/activity_fabrication_button_fabriquer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/activity_fabrication_marque_spin"
        android:layout_below="@+id/activity_fabrication_marque_spin"
        android:layout_marginTop="56dp"
        android:text="@string/activity_fabrication_button_fabriquer_msg" />

</RelativeLayout>